<%= form_for(@notification, method: :post, html: { multipart: true, class: 'form-horizontal' }) do |f| %>
	<% if @notification.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

			<ul>
			<% @notification.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class='form-group'>
			<%= f.label :app, class: 'col-sm-2 control-label' %>
			<div class="col-sm-5">
				<%= f.text_field :app, placeholder: 'app bundle id', class: 'form-control' %>  
			</div>
	</div>

	<div class='form-group'>
			<%= f.label :alert, class: 'col-sm-2 control-label' %>
			<div class="col-sm-5">
				<%= f.text_field :alert, placeholder: 'main notification message', class: 'form-control' %>  
			</div>
	</div>

	<div class='form-group'>
			<%= f.label :sound, class: 'col-sm-2 control-label' %>
			<div class="col-sm-5">
				<%= f.text_field :sound, placeholder: 'not used at the moment', class: 'form-control' %>  
			</div>
	</div>
	
	<div class='form-group'>
			<%= f.label :data, class: 'col-sm-2 control-label' %>
			<div class="col-sm-5">
				<%= f.text_area :data, placeholder: 'extra json data', class: 'form-control' %>  
			</div>
	</div>
	
	<div class='form-group'>
			<%= f.label :badge, class: 'col-sm-2 control-label' %>
			<div class="col-sm-2">
				<%= f.number_field :badge, class: 'form-control' %>  
			</div>
	</div>

	<div class='form-group'>
			<%= f.label :token, class: 'col-sm-2 control-label' %>
			<div class="col-sm-5">
				<%= f.select :token, Account.all.collect { |acc| [acc.nick, acc.token] }, { include_blank: true }, class: 'form-control' %>
			</div>
	</div>

	<div class="actions col-md-offset-2">
		<%= f.submit "Sent", class: 'btn' %>
	</div>
<% end %>
