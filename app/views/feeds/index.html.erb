<h1>Listing feeds</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Message</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.author %></td>
        <td><%= feed.message %></td>
        <td><%= link_to( image_tag(feed.image.thumb.url), feed.image.url, target: '_blank' ) %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
