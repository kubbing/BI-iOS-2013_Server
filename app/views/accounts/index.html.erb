<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Token</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.login %></td>
        <td><%= account.token %></td>
        <td><%= link_to 'Show', account, class: 'btn btn-default btn-sm' %>
        <%= link_to 'Edit', edit_account_path(account), class: 'btn btn-default btn-sm' %>
        <%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, class: 'btn btn-default' %>
